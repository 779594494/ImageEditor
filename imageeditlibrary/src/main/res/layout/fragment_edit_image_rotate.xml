<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal" >
    <ImageView
        android:id="@+id/back_to_main"
        android:layout_width="40dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:src="@drawable/image_edit_back" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/ll_1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">


            <TextView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="旋转"
                android:gravity="center"
                android:textColor="@color/white"/>
            <SeekBar
                android:id="@+id/rotate_bar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:maxHeight="0.5dip"
                android:minHeight="1dip"
                android:progressDrawable="@drawable/red_progress"
                android:thumbTint="@android:color/white"
                android:max="360" />
        </LinearLayout>
        <LinearLayout
            android:layout_below="@+id/ll_1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="left|center"
            android:orientation="horizontal">
            <TextView
                android:visibility="gone"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="镜像"
                android:textColor="@color/white"/>
            <ImageView
                android:padding="5dp"
                android:layout_marginLeft="15dp"
                android:layout_gravity="center"
                android:id="@+id/iv_img_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_img_left"/>
            <ImageView
                android:padding="5dp"
                android:layout_marginLeft="15dp"
                android:layout_gravity="center"
                android:id="@+id/iv_img_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_img_right"/>
            <ImageView
                android:padding="5dp"
                android:layout_marginLeft="15dp"
                android:layout_gravity="center"
                android:id="@+id/iv_img_left_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_img_left_right"/>
            <ImageView
                android:padding="5dp"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                android:id="@+id/iv_img_up_down"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_img_up_down"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>