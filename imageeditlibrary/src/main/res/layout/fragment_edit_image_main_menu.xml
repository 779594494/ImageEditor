<HorizontalScrollView
    android:id="@+id/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:scrollbars="none"
    android:layout_width="match_parent"
    android:layout_height="fill_parent">

    <LinearLayout
        android:layout_gravity="center"
        android:paddingTop="10dp"
        android:background="@color/materialcolorpicker__black"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btn_paint"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:drawableTop="@drawable/index_selector_1"
            android:textColor="@color/white"
            />

        <TextView
            android:drawableTop="@drawable/index_selector_2"
            android:id="@+id/btn_stickers"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:textColor="@color/white"
            />

        <TextView
            android:drawableTop="@drawable/index_selector_3"
            android:id="@+id/btn_filter"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:textColor="@color/white"
           />

        <TextView
            android:drawableTop="@drawable/index_selector_4"
            android:id="@+id/btn_crop"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

            android:layout_marginLeft="23dp"
            android:gravity="center"
            android:textColor="@color/white"
           />

        <TextView
            android:drawableTop="@drawable/index_selector_5"
            android:id="@+id/btn_rotate"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:textColor="@color/white"
           />

        <TextView
            android:drawableTop="@drawable/index_selector_6"
            android:id="@+id/btn_text"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:textColor="@color/white"
            />
        <TextView
            android:drawableTop="@drawable/index_selector_7"
            android:id="@+id/btn_mosai"
            android:layout_width="0dp"
            android:layout_weight="1.1"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:textColor="@color/white"
            />
        <TextView
            android:visibility="gone"
            android:drawableTop="@drawable/index_selector_7"
            android:id="@+id/btn_beauty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

            android:layout_marginLeft="23dp"
            android:gravity="center"
            android:textColor="@color/white"
            />

    </LinearLayout>
</HorizontalScrollView>

